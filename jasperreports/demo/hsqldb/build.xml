<project name="HypersonicSQL" default="runServer" basedir=".">

	<description>Helps starting up the HypersonicSQL demo database.</description>
	
	<target name="runServer" description="Launches the HypersonicSQL database server.">
		<java classname="org.hsqldb.Server" fork="false">
			<classpath>
				<fileset dir="../../lib">
					<include name="**/hsqldb*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<target name="runManager" description="Launches the HypersonicSQL manager.">
		<java classname="org.hsqldb.util.DatabaseManager" fork="true">
			<classpath>
				<fileset dir="../../lib">
					<include name="**/hsqldb*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>
  
</project>
