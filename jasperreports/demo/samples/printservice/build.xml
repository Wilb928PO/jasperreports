<project name="printservice" default="javac" basedir=".">

	<property name="class.name" value="PrintServiceApp" />
	<property name="file.name" value="PrintServiceReport" />
	<property name="classes.dir" value="../../../build/classes" />
	<property name="lib.dir" value="../../../lib" />
	<property name="fonts.dir" value="../../fonts" />
	
	<path id="classpath">
		<pathelement location="./"/>
		<pathelement location="${classes.dir}" />
		<pathelement location="${fonts.dir}" />
		<fileset dir="${lib.dir}">
			<include name="**/*.jar"/>
		</fileset>
	</path>

	<!--
		Compiles the java source files 
		of the test application.
	-->
	<target name="javac">
		<echo message="**************************************************"/>
		<echo message="* You need JDK 1.4 or higher to run this sample. *"/>
		<echo message="* (the current JDK version is ${ant.java.version})               *"/>
		<echo message="**************************************************"/>
		<condition property="using.jdk.1.4">
			<or>
			<equals arg1="${ant.java.version}" arg2="1.4"/>
			<equals arg1="${ant.java.version}" arg2="1.5"/>
			</or>
		</condition>
		<javac srcdir="./" destdir="./" debug="true" optimize="false" deprecation="false">
			<exclude name="**/*.java" unless="using.jdk.1.4"/>
			<classpath refid="classpath"/>
		</javac>
	</target>

	<!--
		Fills the compiled report design with data 
		and produces the .jrprint file.
	-->
	<target name="fill">
		<java classname="${class.name}" fork="true">
			<arg value="-Tfill"/>
			<arg value="-F${file.name}.jrprint"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Launches the report viewer to preview the report 
		stored in the .jrprint file.
	-->
	<target name="view">
		<java classname="net.sf.jasperreports.view.JasperViewer" fork="true">
			<arg value="-F${file.name}.jrprint"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Sends the report in the .jrprint file to the printer.
	-->
	<target name="print">
		<echo message="**************************************************"/>
		<echo message="* You need JDK 1.4 or higher to run this sample. *"/>
		<echo message="* (the current JDK version is ${ant.java.version})               *"/>
		<echo message="**************************************************"/>
		<java classname="${class.name}" fork="true">
			<arg value="-Tprint"/>
			<arg value="-F${file.name}.jrprint"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Deletes all the generated files.
	-->
	<target name="clean">
		<delete>
			<fileset dir="." includes="**/*.class" />
			<fileset dir="." includes="**/*.jrprint" />
		</delete>
	</target>

</project>
