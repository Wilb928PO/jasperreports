<project name="groovy" default="javac" basedir=".">

	<property name="class.name" value="GroovyApp" />
	<property name="file.name" value="GroovyReport" />
	<property name="classes.dir" value="../../../build/classes" />
	<property name="lib.dir" value="../../../lib" />
	<property name="fonts.dir" value="../../fonts" />
	
	<path id="classpath">
		<pathelement location="./build/classes"/>
		<fileset dir="./lib">
			<include name="**/*.jar"/>
		</fileset>
		<pathelement location="${classes.dir}" />
		<pathelement location="${fonts.dir}" />
		<fileset dir="${lib.dir}">
			<include name="**/*.jar"/>
		</fileset>
	</path>

	<condition property="using.jdk.1.4">
		<or>
		<equals arg1="${ant.java.version}" arg2="1.4"/>
		<equals arg1="${ant.java.version}" arg2="1.5"/>
		</or>
	</condition>

	<!--
		Compiles the java source files 
		of the test application.
	-->
	<target name="javac" if="using.jdk.1.4">
		<mkdir dir="./build/classes"/> 
		<javac srcdir="./src" destdir="./build/classes" debug="true" optimize="false" deprecation="false">
			<classpath refid="classpath"/>
		</javac>
	</target>

	<!--
		Compiles the XML report designs 
		and produces the .jasper files.
	-->
	<target name="compile" if="using.jdk.1.4">
		<mkdir dir="./build/reports"/> 
		<taskdef name="jrc" classname="net.sf.jasperreports.ant.JRAntCompileTask"> 
			<classpath refid="classpath"/>
		</taskdef>
		<jrc destdir="./build/reports" compiler="net.sf.jasperreports.compilers.JRGroovyCompiler">
			<src>
				<fileset dir="./reports">
					<include name="**/*.jrxml"/>
				</fileset>
			</src>
			<classpath refid="classpath"/>
		</jrc> 
	</target>

	<!--
		Fills the compiled report design with data 
		and produces the .jrprint file.
	-->
	<target name="fill" if="using.jdk.1.4">
		<java classname="${class.name}" fork="true">
			<arg value="-Tfill"/>
			<arg value="-F./build/reports/${file.name}.jasper"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Launches the report viewer to preview the report 
		stored in the .jrprint file.
	-->
	<target name="view" if="using.jdk.1.4">
		<java classname="net.sf.jasperreports.view.JasperViewer" fork="true">
			<arg value="-F./build/reports/${file.name}.jrprint"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Launches the report viewer to preview the generated report 
		stored in an XML file.
	-->
	<target name="viewXML" if="using.jdk.1.4">
		<java classname="net.sf.jasperreports.view.JasperViewer" fork="true">
			<arg value="-XML"/>
			<arg value="-F./build/reports/${file.name}.jrpxml"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Generates a PDF version of the report 
		by converting the .jrprint file.
	-->
	<target name="pdf" if="using.jdk.1.4">
		<java classname="${class.name}" fork="true">
			<arg value="-Tpdf"/>
			<arg value="-F./build/reports/${file.name}.jrprint"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Launches the design viewer to preview the XML report design.
	-->
	<target name="viewDesignXML" if="using.jdk.1.4">
		<java classname="net.sf.jasperreports.view.JasperDesignViewer" fork="true">
			<arg value="-XML"/>
			<arg value="-F./reports/${file.name}.jrxml"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Launches the design viewer to preview the compiled report design.
	-->
	<target name="viewDesign" if="using.jdk.1.4">
		<java classname="net.sf.jasperreports.view.JasperDesignViewer" fork="true">
			<arg value="-F./build/reports/${file.name}.jasper"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Deletes all the generated files.
	-->
	<target name="clean">
		<delete dir="./build" />
	</target>

</project>
