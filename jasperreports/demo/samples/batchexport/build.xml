<project name="batchexport" default="javac" basedir=".">

	<property name="class.name" value="BatchExportApp" />
	<property name="file.name" value="BatchExportReport" />
	<property name="classes.dir" value="../../../build/classes" />
	<property name="lib.dir" value="../../../lib" />
	<property name="fonts.dir" value="../../fonts" />
	
	<path id="classpath">
		<pathelement location="./"/>
		<pathelement location="${classes.dir}" />
		<pathelement location="${fonts.dir}" />
		<fileset dir="${lib.dir}">
			<include name="**/*.jar"/>
		</fileset>
	</path>

	<!--
		Compiles the java source files 
		of the test application.
	-->
	<target name="javac">
		<javac srcdir="./" destdir="./" debug="true" optimize="false" deprecation="false">
			<classpath refid="classpath"/>
		</javac>
	</target>

	<!--
		Compiles the XML report designs 
		and produces the .jasper files.
	-->
	<target name="compile">
		<taskdef name="jrc" classname="net.sf.jasperreports.ant.JRAntCompileTask"> 
			<classpath refid="classpath"/>
		</taskdef>

		<jrc 
				destdir="./"
				tempdir="./"
				keepjava="false"
				xmlvalidation="true">
			<src>
				<fileset dir="./">
					<include name="**/*.jrxml"/>
				</fileset>
			</src>
			<classpath refid="classpath"/>
		</jrc> 
	</target>

	<!--
		Fills the compiled report design with data 
		and produces the .jrprint file.
	-->
	<target name="fill">
		<java classname="${class.name}" fork="true">
			<arg value="-Tfill"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Launches the report viewer to preview the report 
		stored in the .jrprint file.
	-->
	<target name="view1">
		<java classname="net.sf.jasperreports.view.JasperViewer" fork="true">
			<arg value="-FReport1.jrprint"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<target name="view2">
		<java classname="net.sf.jasperreports.view.JasperViewer" fork="true">
			<arg value="-FReport2.jrprint"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<target name="view3">
		<java classname="net.sf.jasperreports.view.JasperViewer" fork="true">
			<arg value="-FReport3.jrprint"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Generates a PDF version of the report 
		by converting the .jrprint file.
	-->
	<target name="pdf">
		<java classname="${class.name}" fork="true">
			<arg value="-Tpdf"/>
			<arg value="-F${file.name}.pdf"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Generates an HTML version of the report 
		by converting the .jrprint file.
	-->
	<target name="html">
		<java classname="${class.name}" fork="true">
			<arg value="-Thtml"/>
			<arg value="-F${file.name}.html"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Generates an XLS version of the report 
		by converting the .jrprint file.
	-->
	<target name="xls">
		<java classname="${class.name}" fork="true">
			<arg value="-Txls"/>
			<arg value="-F${file.name}.xls"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Generates a CSV version of the report 
		by converting the .jrprint file.
	-->
	<target name="csv">
		<java classname="${class.name}" fork="true">
			<arg value="-Tcsv"/>
			<arg value="-F${file.name}.csv"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Launches the design viewer to preview the XML report design.
	-->
	<target name="viewDesignXML1">
		<java classname="net.sf.jasperreports.view.JasperDesignViewer" fork="true">
			<arg value="-XML"/>
			<arg value="-FReport1.jrxml"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<target name="viewDesignXML2">
		<java classname="net.sf.jasperreports.view.JasperDesignViewer" fork="true">
			<arg value="-XML"/>
			<arg value="-FReport2.jrxml"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<target name="viewDesignXML3">
		<java classname="net.sf.jasperreports.view.JasperDesignViewer" fork="true">
			<arg value="-XML"/>
			<arg value="-FReport3.jrxml"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Launches the design viewer to preview the compiled report design.
	-->
	<target name="viewDesign1">
		<java classname="net.sf.jasperreports.view.JasperDesignViewer" fork="true">
			<arg value="-FReport1.jasper"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<target name="viewDesign2">
		<java classname="net.sf.jasperreports.view.JasperDesignViewer" fork="true">
			<arg value="-FReport2.jasper"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<target name="viewDesign3">
		<java classname="net.sf.jasperreports.view.JasperDesignViewer" fork="true">
			<arg value="-FReport3.jasper"/>
			<classpath refid="classpath"/>
		</java>
	</target>

	<!--
		Deletes all the generated files.
	-->
	<target name="clean">
		<delete>
			<fileset dir="." includes="**/*.class" />
			<fileset dir="." includes="**/*.jasper" />
			<fileset dir="." includes="**/*.jrprint" />
			<fileset dir="." includes="**/*.jrpxml" />
			<fileset dir="." includes="**/*.html" />
			<fileset dir="." includes="**/*.xls" />
			<fileset dir="." includes="**/*.csv" />
			<fileset dir="." includes="**/*.pdf" />
		</delete>
		<delete dir="${file.name}.jrpxml_files" />
		<delete dir="${file.name}.html_files" />
	</target>

</project>
